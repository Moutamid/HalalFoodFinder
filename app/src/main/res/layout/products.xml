<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="12dp">


    <TextView
        android:id="@+id/item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="left"
android:layout_marginTop="8dp"        android:layout_marginLeft="20dp"
        android:text="sunsilk"
        android:textColor="#837979"
        android:textSize="12dp" />

    <TextView
        android:id="@+id/item_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="6dp"
        android:layout_weight="1"
        android:text="Risk Free"

        android:textColor="@color/black"
        android:textSize="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/item_type"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="20dp"
        android:layout_weight="1"
        android:text="For Health"
        android:textColor="#A8A3A3"
        android:textSize="10dp" />

    <View
        android:id="@+id/type"
        android:layout_width="2dp"
        android:layout_height="20dp"
        android:layout_alignParentRight="true"
android:layout_marginTop="9dp"        android:layout_marginEnd="8dp"
        android:background="@drawable/item_bg" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/type"
        android:layout_marginStart="12dp"
        android:layout_marginTop="18dp"
        android:layout_marginEnd="12dp"
        android:layout_marginBottom="12dp"
        android:background="#E4E1E1" />
</RelativeLayout>